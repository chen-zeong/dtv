{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DTV",
  "version": "2.3.4",
  "identifier": "com.dtv.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:2896",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "titleBarStyle": "Overlay",
        "title": "",
        "fullscreen": false,
        "resizable": true,
        "width": 1440,
        "height": 810,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' http://* https://*; connect-src 'self' http://* https://* wss://*; media-src 'self' http://* https://* blob:; img-src 'self' data: http://* https://*; script-src 'self' 'unsafe-eval' blob: 'wasm-unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; worker-src blob:; child-src blob:; object-src blob:; base-uri 'self'; media-src-elem 'self' http://* https://* blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "nsis",
      "msi",
      "deb",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
    "nsis": {
      "languages": ["SimpChinese"]
    },
    "wix": {
      "language": ["zh-CN"]
    }
  }
  }
}
